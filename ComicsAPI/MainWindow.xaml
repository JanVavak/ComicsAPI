        <Border Height="559" VerticalAlignment="Top" Width="439">
            <Image x:Name="comicImage" HorizontalAlignment="Left" Height="559" VerticalAlignment="Top" Width="439" Stretch="Fill"/>
        </Border>

    </Grid>
</Window>
