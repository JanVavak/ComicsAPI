        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComicsAPI"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainPage" Height="648" Width="455" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button Click="Button_Click" x:Name="nextImageButton" Content="Previous" HorizontalAlignment="Left" Margin="0,559,0,0" VerticalAlignment="Top" Width="221" Height="50"/>
